@model IEnumerable<CvStorage.Models.Cv>

<div class="container">
    <div class="">
        <div class="">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="text-right">
            <a asp-controller="Cv" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="10%">@obj.Name</td>
                        <td width="10%">@obj.Email</td>
                        






                        <td class="text-center">
                            // ..
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>